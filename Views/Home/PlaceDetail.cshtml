@model Place

<div class="container mt-5" dir="rtl">
    <div class="row rounded mx-5 text-white p-2" style="text-shadow:2px 2px 4px #575757; background-color: #41634e;"><h2>@Model.Name</h2> </div>

    <div class="row mt-5">
        <div class="col">
            <h4><strong>الوصف</strong></h4>
            <h6 class="mt-3">@Model.Detail?.Description</h6>
        </div>
    </div>

    <hr class="mt-5">

        <div class="row mt-5">
            <div class="col">
                <h4><strong>الأسئلة الشائعة</strong></h4>
                
                <ul class="list-unstyled">
                    <li class="mt-3">
                        <span class="fw-bold">العنوان:</span>
                        <span class="fw-normal">@Model.Address</span>
                    </li>
                    <li class="mt-3">
                        <span class="fw-bold">ساعات العمل:</span>
                        <span class="fw-normal">@Model.Detail?.OpeningHours</span>
                    </li>
                    <li class="mt-3">
                        <span class="fw-bold">يتطلب حجز؟</span>
                        <span class="fw-normal">@(Model.Detail?.RequiresBooking == true ? "نعم" : "لا")</span>
                    </li>
                    @if (!string.IsNullOrEmpty(Model.Detail?.Website))
                    {
                        <li class="mt-3">
                            <span class="fw-bold">الموقع:</span>
                            <span class="fw-normal">
                                <a href="@Model.Detail.Website" target="_blank">@Model.Detail.Website</a>
                            </span>
                        </li>
                    }
                </ul>

                
            </div>
        </div>
    </div>
</div>
