<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] وجهتي</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/finalproject.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: #ece7e4;">
            <div class="container-fluid d-flex justify-content-between align-items-center">

                <!-- Right: Logo -->
                <a class="navbar-brand fw-bold d-flex align-items-center me-4" asp-controller="Home" asp-action="Index">
                    <img src="/images/photo_2025-07-30_18-40-59.png" alt="وجهتي" style="height: 60px;" class="me-2" />
                </a>


                <!-- Toggle for small screens -->
                <button class="navbar-toggler me-5" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Center: Navigation Links -->
                <div class="collapse navbar-collapse justify-content-center" id="mainNavbar">
                    <div class="nav-box d-flex">
                        <a class="nav-link nav-item-style @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active-nav" : "")" asp-controller="Home" asp-action="Index">الرئيسية</a>
                        <a class="nav-link nav-item-style @(ViewContext.RouteData.Values["action"]?.ToString() == "Places" ? "active-nav" : "")" asp-controller="Home" asp-action="Places">الأماكن</a>
                        <a class="nav-link nav-item-style @(ViewContext.RouteData.Values["action"]?.ToString() == "Trip" ? "active-nav" : "")" asp-controller="Trip" asp-action="MyTrips">رحلاتي</a>
                    </div>
                </div>

                <!-- Left: Login / Logout -->
                <div class="ms-2">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                            <button type="submit" class="custom-login-btn">تسجيل الخروج</button>
                        </form>
                    }
                    else
                    {
                        <a class="custom-login-btn" asp-area="Identity" asp-page="/Account/Login">تسجيل الدخول</a>
                    }
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="custom-footer mt-5">

    <div class="container py-4 px-3 text-white d-flex flex-column justify-content-between" style="height: 100%;">
        <div class="row text-center text-md-start align-items-center">

            <!-- Right: Logo -->
            <div class="col-md-4 mb-3 mb-md-0 fw-bold fs-5 text-md-end ">
                <img src="/images/photo_2025-07-30_18-40-59.png" alt="وجهتي" style="height: 80px;" />

            </div>

            <!-- Center: Social -->
            <div class="col-md-4 mb-3 mb-md-0 text-center">
                <div class="social-icons d-flex justify-content-center gap-4">
                    <a href="#" class="footer-icon" title="X"><i class="bi bi-twitter-x"></i></i></a>
                    <a href="#" class="footer-icon" title="واتساب"><i class="bi bi-whatsapp"></i></a>
                    <a href="#" class="footer-icon" title="انستغرام"><i class="bi bi-instagram"></i></a>
                </div>
            </div>

            <!-- Left: Privacy -->
            <div class="col-md-4 text-md-start text-center text-white">
                <a href="#" class="footer-link text-white">سياسة الخصوصية</a>
            </div>
        </div>

        <!-- Bottom: حقوق -->
        <div class="text-center mt-5 small copyright" style="color: aliceblue;">
            © 2025 جميع الحقوق محفوظة لوجهتي.
        </div>
    </div>
</footer>

 @RenderSection("Scripts", required: false)

 <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
