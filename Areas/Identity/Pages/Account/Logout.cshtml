@page
@model LogoutModel
@{
    ViewData["Title"] = "تسجيل الخروج";
}

<div class="container mt-5 text-center">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="btn btn-outline-dark">اضغط هنا للعودة للصفحة الرئيسية</button>
        </form>
    }
    else
    {
        <p class="fs-5 mt-3">تم تسجيل الخروج بنجاح</p>
    }
</div>
