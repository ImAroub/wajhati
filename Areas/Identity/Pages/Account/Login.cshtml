@page
@model LoginModel

@{
    ViewData["Title"] = "صفحة تسجيل الدخول";
}

<div dir="rtl">
<div class="row d-flex justify-content-center mt-5">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2 class="d-flex justify-content-center mt-5">تسجيل الدخول</h2>
                <hr class="mt-5" />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3"> الايميل
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="ادخل الإيميل" />
                    
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3"> رمز الدخول
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="ادخل رمز الدخول" />
                    
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg mb-4 text-white fw-bold" style="background-color: #6d7e5c;">تسجيل الدخول</button>
                </div>
                <div>
                    <p>ليس لديك حساب؟</p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">تسجيل حساب جديد</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
   
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
